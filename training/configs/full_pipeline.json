{
  "base_model": "unsloth/Qwen3-0.6B-Base-unsloth-bnb-4bit",
  "compute": "gpu-cluster",
  "enable_dapt": true,
  "enable_grpo": true,
  "dapt_data": "azureml:dapt-culinary-corpus@latest",
  "sft_data": "azureml:pantrypilot-sft-data@latest",
  "val_data": "azureml:pantrypilot-sft-data-val@latest",
  "grpo_prompts": "azureml:pantrypilot-grpo-prompts@latest",
  "dapt": {
    "max_seq_length": 2048,
    "learning_rate": 2e-5,
    "num_epochs": 1,
    "batch_size": 4,
    "gradient_accumulation_steps": 4,
    "warmup_steps": 100,
    "lora_r": 16,
    "lora_alpha": 32,
    "streaming": true,
    "max_steps": 50000,
    "logging_steps": 10,
    "save_steps": 500,
    "seed": 3407
  },
  "sft": {
    "max_seq_length": 8192,
    "learning_rate": 2e-4,
    "num_epochs": 3,
    "batch_size": 2,
    "gradient_accumulation_steps": 4,
    "warmup_steps": 10,
    "lora_r": 16,
    "lora_alpha": 32,
    "chat_template": "chatml",
    "logging_steps": 10,
    "eval_steps": 100,
    "save_steps": 100,
    "seed": 3407
  },
  "grpo": {
    "max_seq_length": 4096,
    "num_generations": 8,
    "temperature": 1.0,
    "max_new_tokens": 512,
    "beta": 0.01,
    "learning_rate": 5e-6,
    "num_epochs": 2,
    "batch_size": 1,
    "gradient_accumulation_steps": 4,
    "lora_r": 32,
    "lora_alpha": 32,
    "json_weight": 1.0,
    "tool_weight": 2.0,
    "args_weight": 1.5,
    "query_weight": 1.0,
    "logging_steps": 1,
    "save_steps": 50,
    "seed": 3407
  }
}
