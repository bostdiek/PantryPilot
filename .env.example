# PantryPilot Environment Variables Template
# Copy this file to .env.dev and .env.prod and fill in the actual values
# DO NOT commit .env.dev or .env.prod files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=pantrypilot_user
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=pantrypilot
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Constructed database URL (used by FastAPI)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# FASTAPI CONFIGURATION
# =============================================================================
# Environment: development, production, testing
ENVIRONMENT=development

# Security
SECRET_KEY=CHANGE_ME_TO_LONG_RANDOM_STRING_FOR_JWT_SIGNING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=PantryPilot
VERSION=0.1.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# Development example: http://localhost:5173,http://127.0.0.1:5173
# Production example: https://pantrypilot.com,https://www.pantrypilot.com
CORS_ORIGINS=http://localhost:5173

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend API URL for frontend to connect to
VITE_API_URL=http://localhost:8000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Compose project name (affects container and volume names)
COMPOSE_PROJECT_NAME=pantrypilot

# =============================================================================
# PRODUCTION-SPECIFIC CONFIGURATION
# =============================================================================
# Domain configuration for production
DOMAIN=localhost
# Set to 1 to enable HTTPS/SSL
ENABLE_HTTPS=0

# Email configuration (for future notifications)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# =============================================================================
# SECURITY HEADERS (Production)
# =============================================================================
# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
