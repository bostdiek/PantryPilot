{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/local/bin/uv",
            "args": [
                "run",
                "uvicorn",
                "src.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/apps/backend",
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/local/bin/uv",
            "args": [
                "run",
                "pytest",
                "${file}"
            ],
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/apps/backend",
            "justMyCode": false
        }
    ]
}
